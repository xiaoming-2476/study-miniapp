<view class="pyg_index">
    <!--搜索框开始-->
    <SearchInput></SearchInput>
    <!--搜索框结束-->
    <!-- 轮播图 开始 -->
    <view class="index_swiper">
    <!-- 1 swiper标签存在默认的宽度和高度  100% 150px
        2 image标签也存在默认的宽度和高度 320px * 240px
        3 设计图片和轮播图
         1 查看原图的宽度和高度 750 * 340
         2 让图片的高度自适应 宽度等于100%
        4 图片标签
          mode属性 渲染模式
            widthFix 让图片的标签宽高和图片标签的 宽高等比例的发生变化
    -->
        <swiper indicator-dots indicator-active-color="red" autoplay circular>
           <swiper-item wx:for="{{swiperList}}" wx:key="goods_id">
            <navigator >
                <image mode="widthFix" src="{{item.image_src}}" />
            </navigator>
           </swiper-item>>
        </swiper>
    </view>
    <!-- 轮播图结束 -->

    <!-- 导航 开始-->
    <view class="index_cate">
    <navigator
        wx:for="{{catesList}}"
        wx:key="name">
        <image mode="widthFix" src="{{item.image_src}}"></image>
        </navigator>
    </view>
    <!-- 导航 结束-->

    <!-- 楼层数据 开始-->
    <view class="index_floor">
        <view class="floor_group"
        wx:for="{{floorList}}"
        wx:for-item="floorItem"
        wx:for-index="floorIndex"
        wx:key="floor_title">
            <!--标题-->
            <view class="floor_title">
                <image mode="widthFix" src="{{floorItem.floor_title.image_src}}"></image>
            </view>
            <!--内容-->
            <view class="product_list">
                <navigator 
                wx:for="{{floorItem.product_list}}"
                wx:for-item="productItem"
                wx:for-index="productIndex"
                wx:key="name">
                    <image mode="widthFix" src="{{productItem.image_src}}"></image>
                </navigator>
            </view>
        </view>
    </view>
    <!-- 楼层数据 结束-->
</view>
